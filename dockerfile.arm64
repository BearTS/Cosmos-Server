# syntax=docker/dockerfile:1

FROM --platform=linux/arm64 arm64v8/debian

EXPOSE 443 80

VOLUME /config

RUN apt-get clean
RUN apt-get update 
RUN apt-get install -y ca-certificates openssl

WORKDIR /app

COPY build/cosmos .
COPY build/cosmos_gray.png .
COPY build/Logo.png .
COPY build/GeoLite2-Country.mmdb .
COPY build/meta.json .
COPY static ./static

CMD ["./cosmos"]
